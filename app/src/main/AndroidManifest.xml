<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tunashopadmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TunaShopAdmin">
        <activity
            android:name=".OrderDetailActivity"
            android:configChanges="orientation"
            android:exported="false" />
        <activity
            android:name=".login_screen.LoginWithEmailActivity"
            android:exported="false" />
        <activity
            android:name=".login_screen.LoginWithPhoneNumberActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:exported="false" />
        <activity
            android:name=".login_screen.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".login_screen.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".splash_screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>