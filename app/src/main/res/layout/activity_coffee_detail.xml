<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_thumbnail"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/img_thumbnail"
            android:layout_above="@id/btUpdateCoffee"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/infor_coffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Tên đồ uống: "
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/name"
                    android:text="Tên"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/edit_text_custom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Loại:"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/category"
                    android:text="Category"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/edit_text_custom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Giá bán (VNĐ):"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/price"
                    android:text="Gía"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/edit_text_custom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Mô tả"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="start"
                    android:id="@+id/description"
                    android:text="Mô tả"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/edit_text_custom2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/status"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/status"
                            android:text="Đang bán"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_on_off_coffee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:text="Lưu thay đổi"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:background="@drawable/button_custom4"
            android:layout_margin="10dp"
            android:id="@+id/btUpdateCoffee"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>