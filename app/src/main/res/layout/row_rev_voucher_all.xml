<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@drawable/ticketback"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/chewy"
            android:padding="5dp"
            android:text="@string/name_shop"
            android:textSize="14sp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@id/shop_name"
            android:layout_marginHorizontal="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/voucher_name"
                android:text="#TUNA1234"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/value_voucher"
                android:text="Giảm 20% giá trị đơn hàng"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/time_start"
                android:text="Hết hạn: 9:51 12/09/2022"
                android:textSize="11.2sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/time_cancel"
                android:text="Hết hạn: 9:51 12/09/2022"
                android:textSize="11.2sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_voucher"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Chi tiết"
            android:textColor="#64B5F6"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>