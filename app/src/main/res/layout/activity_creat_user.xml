<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Thêm tài khoản cho nhân viên mới"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_name"
                android:hint="Họ và tên"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <EditText
                android:id="@+id/et_email"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <EditText
                android:id="@+id/et_phone_number"
                android:hint="Số điện thoại"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:id="@+id/et_address"
                android:text="Địa chỉ"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#B1B0B0"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:text="Lựa chọn chức vụ"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/rg_level"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_shipper"
                    android:text="Shipper"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
                <RadioButton
                    android:id="@+id/rb_staff"
                    android:text="Bán hàng"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
                <RadioButton
                    android:id="@+id/rb_manager"
                    android:text="Quản lý"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
            </RadioGroup>
            <LinearLayout
                android:id="@+id/layout_level"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="1dp"
                    android:id="@+id/img_level"
                    android:src="@drawable/leader_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:id="@+id/tv_level"
                    android:text="Nhân viên bán hàng"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_creat_with_email"
                android:text="Tạo với email"
                android:textStyle="bold"
                android:textColor="#FFB74D"
                android:background="@drawable/button_custom2"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_creat_with_phone_number"
                android:text="Tạo với số điện thoại"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="15sp"
                android:background="@drawable/button_custom"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</layout>