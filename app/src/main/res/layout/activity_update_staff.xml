<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Chỉnh sửa thông tin nhân viên"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Chỉnh sửa thông tin"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_name"
                android:hint="Họ và tên"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:id="@+id/et_address_update"
                android:text="Địa chỉ"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#B1B0B0"
                android:background="@drawable/edit_text_custom2"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:text="Lựa chọn chức vụ"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/rg_level"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_shipper"
                    android:text="Shipper"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
                <RadioButton
                    android:id="@+id/rb_staff"
                    android:text="Bán hàng"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
                <RadioButton
                    android:id="@+id/rb_manager"
                    android:text="Quản lý"
                    android:layout_width="0dp"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:button="@drawable/null_button"
                    android:textColor="@drawable/text_checked"
                    android:layout_weight="1"
                    android:layout_height="35dp"/>
            </RadioGroup>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btComplete"
            android:text="Hoàn tất cập nhật thông tin"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/button_custom4"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</layout>